@{
    int? rolId = Session["RolId"] as int?;
    string nombreUsuario = Session["NombreUsuario"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar flex-shrink-0 p-3" id="sidebarNav" style="width: 240px; position: relative;">
            <div class="sidebar-header">
                <h5 class="sidebar-logo">SoftPets</h5>
                <button class="sidebar-toggle" id="sidebarToggle"><i class="bi bi-list"></i></button>
            </div>
            <ul class="nav nav-pills flex-column mb-auto">
                <!-- INICIO (todos) -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <i class="bi bi-house-door card-inicio card-icon"></i> Inicio
                    </a>
                </li>
                <!-- Mascotas (todos) -->
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Mascotas")">
                        <i class="bi bi-house-heart card-mascotas card-icon"></i> Mascotas
                    </a>
                </li>
                <!-- Vacunaciones (todos) -->
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Vacunaciones")">
                        <i class="bi bi-shield-plus card-vacunaciones card-icon"></i> Vacunaciones
                    </a>
                </li>
                <!-- Historiales Clínicos (todos) -->
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "HistorialesClinicos")">
                        <i class="bi bi-journal-medical card-historiales card-icon"></i> Historiales Clínicos
                    </a>
                </li>
                <!-- Tendencias (todos) -->
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Tendencias")">
                        <i class="bi bi-bar-chart-line card-tendencias card-icon"></i> Tendencias
                    </a>
                </li>
                <!-- Roles, Usuarios, Veterinarios (solo admin) -->
                @if (rolId == 1)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "Roles")">
                            <i class="bi bi-person-badge card-roles card-icon"></i> Roles
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "Usuarios")">
                            <i class="bi bi-people card-usuarios card-icon"></i> Usuarios
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "Veterinarios")">
                            <i class="bi bi-heart-pulse card-veterinarios card-icon"></i> Veterinarios
                        </a>
                    </li>
                }
                <!-- Dueños (admin y veterinario) -->
                @if (rolId == 1 || rolId == 3)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "Duenios")">
                            <i class="bi bi-person-lines-fill card-duenios card-icon"></i> Dueños
                        </a>
                    </li>
                }
                <!-- Mis Datos (solo dueño y veterinario) -->
                @if (rolId == 2 || rolId == 3)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("MisDatos", rolId == 2 ? "Duenios" : "Veterinarios")">
                            <i class="bi bi-person card-misdatos card-icon"></i> Mis Datos
                        </a>
                    </li>
                }
                <!-- QR (todos) -->
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "QRPublico")">
                        <i class="bi bi-qr-code card-qr card-icon"></i> QR
                    </a>
                </li>
                <!-- Vacunas (admin y veterinario) -->
                @if (rolId == 1 || rolId == 3)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("Index", "Vacunas")">
                            <i class="bi bi-capsule card-vacunas card-icon"></i> Vacunas
                        </a>
                    </li>
                }
            </ul>
            <div class="sidebar-footer mt-auto text-center">
                <hr />
                <span>Usuario: <strong>@nombreUsuario</strong></span><br />
                @Html.ActionLink("Cerrar sesión", "Logout", "Login", null, new { @class = "btn btn-sm btn-cerrar" })
            </div>
        </nav>
        <!-- Main content -->
        <div class="flex-grow-1 main-content-bg p-4">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>
    <script>
        const sidebar = document.getElementById('sidebarNav');
        const toggle = document.getElementById('sidebarToggle');
        toggle.addEventListener('click', function (e) {
            e.stopPropagation();
            sidebar.classList.toggle('show');
        });
        document.addEventListener('click', function (e) {
            if (window.innerWidth <= 900 && sidebar.classList.contains('show')) {
                if (!sidebar.contains(e.target) && e.target !== toggle) {
                    sidebar.classList.remove('show');
                }
            }
        });
    </script>
</body>
</html>