@model SoftPets.Models.Vacunacion
@{
    ViewBag.Title = "Registrar Vacunación/Pastilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int mascotaId = ViewBag.MascotaId;
    var vacunas = ViewBag.Vacunas as List<SelectListItem>;
}

<div class="container" style="max-width:600px;">
    <h2 class="mb-4">Registrar Vacunación/Pastilla</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.MascotaId, new { Value = mascotaId })
                @Html.HiddenFor(m => m.Estado, new { Value = "Aplicada" })
                <div class="form-group mb-3">
                    @Html.Label("Vacuna/Pastilla", htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.VacunaId, vacunas, "-- Seleccione --", new { @class = "form-select", id = "VacunaId" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.DosisAplicada, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.DosisAplicada, new { @class = "form-control", maxlength = 50, placeholder = "Ej: 1mg, 1 tableta" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.FechaAplicada, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FechaAplicada, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", value = Model.FechaAplicada.HasValue ? Model.FechaAplicada.Value.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"), id = "FechaAplicada" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Lote, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Lote, new { @class = "form-control", maxlength = 50 })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Observaciones, htmlAttributes: new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control", maxlength = 255, rows = 2 })
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Cantidad de dosis del esquema ya aplicadas (opcional)</label>
                    <input type="number" class="form-control" name="DosisYaAplicadas" id="DosisYaAplicadas" min="0" value="0" />
                </div>
                <div class="form-group mb-3" id="fechaUltimaDosisDiv" style="display:none;">
                    <label class="form-label">Fecha de última dosis aplicada (opcional)</label>
                    <input type="date" class="form-control" name="FechaUltimaDosis" id="FechaUltimaDosis" />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Registrar" class="btn btn-unificado" />
                    @Html.ActionLink("Volver", "Index", new { mascotaId = mascotaId }, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
function restarMeses(fecha, meses) {
    var d = new Date(fecha);
    var day = d.getDate();
    d.setMonth(d.getMonth() - meses);
    if (d.getDate() < day) {
        d.setDate(0);
    }
    return d;
}

function calcularFechaUltimaDosis() {
    var vacunaId = $('#VacunaId').val();
    var fechaAplicada = $('#FechaAplicada').val();
    if (!fechaAplicada) {
        var hoy = new Date();
        fechaAplicada = hoy.toISOString().slice(0,10);
    }
    if (vacunaId) {
        $.get('@Url.Action("ObtenerFrecuenciaUnidad", "Vacunaciones")', { vacunaId: vacunaId }, function(data) {
            var frecuencia = parseInt(data.frecuencia);
            var unidad = data.unidad;
            var fechaUltima = new Date(fechaAplicada);
            if (frecuencia > 0 && unidad) {
                switch (unidad) {
                    case "Día": fechaUltima.setDate(fechaUltima.getDate() - frecuencia); break;
                    case "Semana": fechaUltima.setDate(fechaUltima.getDate() - (frecuencia * 7)); break;
                    case "Mes": fechaUltima = restarMeses(fechaUltima, frecuencia); break;
                    case "Año": fechaUltima.setFullYear(fechaUltima.getFullYear() - frecuencia); break;
                }
                var yyyy = fechaUltima.getFullYear();
                var mm = String(fechaUltima.getMonth() + 1).padStart(2, '0');
                var dd = String(fechaUltima.getDate()).padStart(2, '0');
                $('#FechaUltimaDosis').val(yyyy + '-' + mm + '-' + dd);
            }
        });
    }
}

$(document).ready(function() {
    $('#VacunaId').select2({
        placeholder: "Buscar vacuna o pastilla...",
        allowClear: true
    });
    $('#DosisYaAplicadas').on('input', function() {
        var val = parseInt($(this).val());
        if (val > 0) {
            $('#fechaUltimaDosisDiv').show();
            calcularFechaUltimaDosis();
        } else {
            $('#fechaUltimaDosisDiv').hide();
        }
    });
    $('#VacunaId, #FechaAplicada').on('change', function() {
        if ($('#DosisYaAplicadas').val() > 0) {
            calcularFechaUltimaDosis();
        }
    });
    // Mostrar el campo si ya hay valor al cargar la página
    var val = parseInt($('#DosisYaAplicadas').val());
    if (val > 0) {
        $('#fechaUltimaDosisDiv').show();
        calcularFechaUltimaDosis();
    }
});
    </script>
}