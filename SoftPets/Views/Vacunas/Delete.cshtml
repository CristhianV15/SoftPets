@model SoftPets.Models.Vacuna
@{
    ViewBag.Title = Model.Estado == '1' ? "Desactivar Vacuna" : "Activar Vacuna";
    var accion = Model.Estado == '1' ? "desactivar" : "activar";
    var textoBoton = Model.Estado == '1' ? "Desactivar" : "Activar";
}

<h2>@ViewBag.Title</h2>
<h3>¿Está seguro que desea @accion esta vacuna?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd>@Model.Nombre</dd>
        <dt>@Html.DisplayNameFor(m => m.Descripcion)</dt>
        <dd>@Model.Descripcion</dd>
        <dt>@Html.DisplayNameFor(m => m.Lote)</dt>
        <dd>@Model.Lote</dd>
        <dt>@Html.DisplayNameFor(m => m.Estado)</dt>
        <dd>@(Model.Estado == '1' ? "Activo" : "Inactivo")</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="@textoBoton" class="btn btn-danger" /> |
        @Html.ActionLink("Cancelar", "Index")
    </div>
}
