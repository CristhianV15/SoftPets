@model SoftPets.Models.Veterinario
@{
    ViewBag.Title = "Mis Datos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool esNuevo = ViewBag.EsNuevo ?? false;
}

<div class="main-content-bg">
    <div class="form-horizontal" style="max-width:500px;margin:30px auto;">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "veterinarioForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.UsuarioId)
            @Html.HiddenFor(m => m.Id)
            <div id="errorMsg" class="error-message"></div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", maxlength = 100, id = "Nombre" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Colegio, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Colegio, new { @class = "form-control", maxlength = 100, id = "Colegio" })
                @Html.ValidationMessageFor(m => m.Colegio, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.CMP, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CMP, new { @class = "form-control", maxlength = 50, id = "CMP" })
                @Html.ValidationMessageFor(m => m.CMP, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-3 text-center">
                <button type="submit" class="btn btn-unificado">@((esNuevo) ? "Guardar" : "Actualizar")</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('veterinarioForm').onsubmit = function (e) {
            var nombre = document.getElementById('Nombre').value.trim();
            var colegio = document.getElementById('Colegio').value.trim();
            var cmp = document.getElementById('CMP').value.trim();
            var errorMsg = document.getElementById('errorMsg');
            errorMsg.style.display = 'none';
            errorMsg.innerText = '';
            if (!nombre) {
                errorMsg.innerText = "El nombre es obligatorio.";
                errorMsg.style.display = 'block';
                e.preventDefault();
                return false;
            }
            if (!colegio) {
                errorMsg.innerText = "El colegio es obligatorio.";
                errorMsg.style.display = 'block';
                e.preventDefault();
                return false;
            }
            if (!cmp) {
                errorMsg.innerText = "El CMP es obligatorio.";
                errorMsg.style.display = 'block';
                e.preventDefault();
                return false;
            }
        };
    </script>
}