@model SoftPets.Models.Veterinario
@{
    ViewBag.Title = "Completar Datos de Veterinario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h2 class="mb-4">@ViewBag.Title</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.UsuarioId)
        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.Colegio, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Colegio, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Colegio, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6 mb-3">
                @Html.LabelFor(m => m.CMP, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CMP, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CMP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>
    }
</div>
