@model IEnumerable<SoftPets.Models.ProximaConsultaVM>
@{
    ViewBag.Title = "Próximas Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content-bg" style="max-width:900px;">
    <div class="tabla-container">
        <h2 class="text-center mb-4">Próximas Consultas</h2>
        <table class="table table-custom">
            <tr>
                <th>Mascota</th>
                <th>Tipo</th>
                <th>Motivo</th>
                <th>Fecha Consulta</th>
                <th>Estado</th>
                <th style="min-width: 170px;">Acciones</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreMascota</td>
                    <td>
                        @if (item.Tipo == "Emergencia")
                        {
                            <span class="badge bg-danger">Emergencia</span>
                        }
                        else
                        {
                            <span class="badge bg-info text-dark">Consulta</span>
                        }
                    </td>
                    <td>@item.Motivo</td>
                    <td>@item.FechaFuturaConsulta.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.Estado == "Pendiente")
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Realizada</span>
                        }
                    </td>
                    <td>
                        <div class="acciones-btn-group" style="margin-bottom:6px;">
                            <a href="@Url.Action("Index", "DetalleHistorialClinico", new { historialClinicoId = item.HistorialClinicoId })" class="btn btn-unificado btn-sm" title="Ver Detalle">
                                <i class="bi bi-info-circle"></i>
                            </a>
                        </div>
                        @if (item.Estado == "Pendiente")
                        {
                            <div class="acciones-btn-group" style="margin-top:8px;">
                                <button class="btn btn-unificado btn-sm" onclick="marcarConsultaRealizada(@item.Id)">
                                    <i class="bi bi-check-circle" style="color:#22c55e;"></i>
                                </button>
                            </div>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
function marcarConsultaRealizada(id) {
    Swal.fire({
        title: '¿Está seguro?',
        text: '¿Desea marcar esta consulta como realizada?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Sí, marcar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            $.post('@Url.Action("MarcarConsultaRealizada", "DetalleHistorialClinico")', { id: id }, function (res) {
                if (res.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Consulta marcada como realizada!',
                        showConfirmButton: false,
                        timer: 1200
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo marcar la consulta.',
                        showConfirmButton: true
                    });
                }
            });
        }
    });
}
    </script>
}