@model IEnumerable<SoftPets.Models.DosisIndicacionHistorialClinico>
@{
    ViewBag.Title = "Dosis Programadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int indicacionesHistorialesClinicosId = ViewBag.IndicacionesHistorialesClinicosId;
}

<div class="main-content-bg" style="max-width:100vw;">
    <div class="tabla-container" style="overflow-x:auto; min-width:1100px;">
        <h2 class="text-center mb-4">
            Dosis programadas para 
            <span style="color:#2563eb;">@(!string.IsNullOrEmpty(ViewBag.Medicamento) ? ViewBag.Medicamento : "--")</span>
        </h2>
        <p class="text-center">
            @Html.ActionLink("Registrar Dosis", "Create", new { IndicacionesHistorialesClinicosId = indicacionesHistorialesClinicosId }, new { @class = "btn btn-unificado btn-crear-nuevo mb-3" })
        </p>
        <table class="table table-custom">
            <tr>
                <th>Dosis</th>
                <th>Frecuencia</th>
                <th>Total Dosis</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado Alerta</th>
                <th>Acciones</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Dosis</td>
                    <td>@item.IntervaloCantidad @item.IntervaloTipo</td>
                    <td>@item.CantidadTotalDosis</td>
                    <td>@item.FechaInicioDosis.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(item.FechaFinDosis.HasValue ? item.FechaFinDosis.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                    <td>@item.EstadoAlerta</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-unificado btn-sm" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Index", "TomasDosisIndicacionHistorialClinico", new { dosisIndicacionHistorialClinicoId = item.Id })" class="btn btn-unificado btn-sm" title="Checklist de Tomas">
                            <i class="bi bi-check2-square"></i>
                        </a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["SwalMascotaEditada"] != null)
    {
        <text>
            Swal.fire({
            icon: 'success',
            title: '¡Operación exitosa!',
            text: '@Html.Raw(TempData["SwalMascotaEditada"].ToString())',
            showConfirmButton: false,
            timer: 1800
            });
        </text>
    }
    @if (TempData["SwalError"] != null)
    {
        <text>
            Swal.fire({
            icon: 'error',
            title: '¡Error!',
            text: '@Html.Raw(TempData["SwalError"].ToString())',
            showConfirmButton: true
            });
        </text>
    }
}