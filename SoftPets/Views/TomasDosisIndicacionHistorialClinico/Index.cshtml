@model IEnumerable<SoftPets.Models.TomasDosisIndicacionHistorialClinico>
@{
    ViewBag.Title = "Control de Tomas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int dosisIndicacionHistorialClinicoId = ViewBag.DosisIndicacionHistorialClinicoId;
    string medicamento = ViewBag.Medicamento as string ?? "";
}

<div class="main-content-bg" style="max-width:1100px;">
    <div class="tabla-container" style="overflow-x:auto; min-width:900px;">
        <h2 class="text-center mb-4">Tomas programadas para: <span style="color:#2563eb;">@medicamento</span></h2>
        <table class="table table-custom">
            <tr>
                <th>#</th>
                <th>Fecha y Hora</th>
                <th>Estado</th>
                <th>Observaciones</th>
                <th>Acción</th>
            </tr>
            @foreach (var item in Model.Select((t, i) => new { Toma = t, Index = i + 1 }))
            {
                <tr>
                    <td>@item.Index</td>
                    <td>@item.Toma.FechaHoraProgramada.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Toma.Estado == "Realizada")
                        {
                            <span class="badge bg-success">Realizada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    <td>@item.Toma.Observaciones</td>
                    <td>
                        @if (item.Toma.Estado == "Pendiente")
                        {
                            <button class="btn btn-unificado btn-sm" onclick="marcarToma(@item.Toma.Id)">Registrar Toma</button>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
function marcarToma(id) {
    Swal.fire({
        title: '¿Desea agregar una observación?',
        input: 'textarea',
        inputPlaceholder: 'Observaciones (opcional)',
        showCancelButton: true,
        confirmButtonText: 'Registrar',
        cancelButtonText: 'Cancelar'
    }).then((result) => {
        if (result.isConfirmed) {
            var obs = result.value || "";
            $.post('@Url.Action("MarcarRealizada", "TomasDosisIndicacionHistorialClinico")', { id: id, observacion: obs }, function (res) {
                if (res.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Toma registrada!',
                        showConfirmButton: false,
                        timer: 1200
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'No se pudo registrar la toma.',
                        showConfirmButton: true
                    });
                }
            });
        }
    });
}
    </script>
}