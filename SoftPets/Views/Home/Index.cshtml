@{
    ViewBag.Title = "Panel principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int? rolId = Session["RolId"] as int?;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="panel-titulo">Bienvenido a SoftPets</div>
<div class="cards-container">
    <div>
        <a href="@Url.Action("MiCuenta", "Login")" class="card-modulo card-misdatos">
            <i class="bi bi-person-circle card-icon"></i>
        </a>
        <div class="card-label">Mi Cuenta</div>
    </div>
    <!-- Mascotas (todos) -->
    <div>
        <a href="@Url.Action("Index", "Mascotas")" class="card-modulo card-mascotas">
            <i class="bi bi-house-heart card-icon"></i>
        </a>
        <div class="card-label">Mascotas</div>
    </div>


    <!-- Historiales Clínicos (todos) -->
    <!--<div>
        <a href="@Url.Action("Index", "HistorialesClinicos")" class="card-modulo card-historiales">
            <i class="bi bi-journal-medical card-icon"></i>
        </a>
        <div class="card-label">Historiales Clínicos</div>
    </div>-->
    <!-- Roles (solo admin) -->
    @if (rolId == 1)
    {
        <div>
            <a href="@Url.Action("Index", "Roles")" class="card-modulo card-roles">
                <i class="bi bi-person-badge card-icon"></i>
            </a>
            <div class="card-label">Roles</div>
        </div>
        <div>
            <a href="@Url.Action("Index", "Usuarios")" class="card-modulo card-usuarios">
                <i class="bi bi-people card-icon"></i>
            </a>
            <div class="card-label">Usuarios</div>
        </div>
        <div>
            <a href="@Url.Action("Index", "Veterinarios")" class="card-modulo card-veterinarios">
                <i class="bi bi-heart-pulse card-icon"></i>
            </a>
            <div class="card-label">Veterinarios</div>
        </div>
    }

    <!--Solo dueño de mascota -->
    @if (rolId == 2)
    {<!-- Vacunaciones (todos) -->
        <div>
            <a href="@Url.Action("Index", "Vacunaciones")" class="card-modulo card-vacunaciones">
                <i class="bi bi-shield-plus card-icon"></i>
            </a>
            <div class="card-label">Vacunaciones</div>
        </div>

        <!-- Tendencias (todos) -->
        <div>
            <a href="@Url.Action("Index", "Tendencias")" class="card-modulo card-tendencias">
                <i class="bi bi-bar-chart-line card-icon"></i>
            </a>
            <div class="card-label">Tendencias</div>
        </div>

        <!-- Historial Clínico Emergencia -->
        <div>
            <a href="@Url.Action("IndexEmergenciaPorDuenio", "HistorialClinico")" class="card-modulo card-historiales">
                <i class="bi bi-exclamation-triangle card-icon"></i>
            </a>
            <div class="card-label">Historial Emergencia</div>
        </div>
        <!-- Historial Clínico Consulta -->
        <div>
            <a href="@Url.Action("IndexConsultaPorDuenio", "HistorialClinico")" class="card-modulo card-historiales">
                <i class="bi bi-journal-text card-icon"></i>
            </a>
            <div class="card-label">Historial Consulta</div>
        </div>

        <div>
            <a href="@Url.Action("IndexGeneral", "DosisIndicacionHistorialClinico")" class="card-modulo card-historiales">
                <i class="bi bi-capsule-pill card-icon"></i>
            </a>
            <div class="card-label">Mis Dosis</div>
        </div>

        <div>
            <a href="@Url.Action("IndexGeneral", "TomasDosisIndicacionHistorialClinico")" class="card-modulo card-historiales">
                <i class="bi bi-calendar-check card-icon"></i>
            </a>
            <div class="card-label">Checklist de Tomas</div>
        </div>


        <div>
            <a href="@Url.Action("ProximasConsultas", "DetalleHistorialClinico")" class="card-modulo card-historiales">
                <i class="bi bi-calendar-event card-icon"></i>
            </a>
            <div class="card-label">Próximas Consultas</div>
        </div>

    }

    <!-- Dueños (admin y veterinario) -->
    @if (rolId == 1 || rolId == 3)
    {
        <div>
            <a href="@Url.Action("Index", "Duenios")" class="card-modulo card-duenios">
                <i class="bi bi-person-lines-fill card-icon"></i>
            </a>
            <div class="card-label">Dueños</div>
        </div>
    }

    <!-- Mis Datos (solo dueño y veterinario) -->
    @if (rolId == 2 || rolId == 3)
    {
        <div>
            <a href="@Url.Action("MisDatos", rolId == 2 ? "Duenios" : "Veterinarios")" class="card-modulo card-misdatos">
                <i class="bi bi-person card-icon"></i>
            </a>
            <div class="card-label">Mis Datos</div>
        </div>
    }

    <!-- QR (todos) -->
    @*<div>
            <a href="@Url.Action("Index", "QRPublico")" class="card-modulo card-qr">
                <i class="bi bi-qr-code card-icon"></i>
            </a>
            <div class="card-label">QR</div>
        </div>*@

    <!-- Vacunas (admin y veterinario) -->
    @if (rolId == 1 || rolId == 3)
    {
        <div>
            <a href="@Url.Action("Index", "Vacunas")" class="card-modulo card-vacunas">
                <i class="bi bi-capsule card-icon"></i>
            </a>
            <div class="card-label">Vacunas</div>
        </div>
    }
</div>