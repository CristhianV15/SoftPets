@model SoftPets.Models.Tendencia
@{
    ViewBag.Title = "Registrar Tendencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int? mascotaId = ViewBag.MascotaId as int?;
    string nombreMascota = ViewBag.NombreMascota as string ?? "";
    var mascotas = ViewBag.Mascotas as List<SoftPets.Models.Mascota>;
}

<h2 class="text-center mb-4">
    @if (mascotaId != null)
    {
        @:Registrar Tendencia de @nombreMascota
    }
    else
    {
        @:Registrar Tendencia
    }
</h2>

<div style="max-width:600px; margin:0 auto;">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @if (mascotaId != null)
            {
                @Html.HiddenFor(m => m.MascotaId, new { Value = mascotaId })
            }
            else
            {
                <div class="form-group mb-3">
                    @Html.Label("Mascota", htmlAttributes: new { @class = "form-label" })
                    <select name="MascotaId" id="MascotaId" class="form-select">
                        <option value="">-- Seleccione --</option>
                        @foreach (var m in mascotas)
                        {
                            <option value="@m.Id">@m.Nombre</option>
                        }
                    </select>
                </div>
            }
            <div id="errorMsg" class="error-message"></div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Fecha, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Fecha, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", id = "Fecha" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Peso, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Peso, new { @class = "form-control", type = "number", step = "0.01", min = "0", id = "Peso" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Temperatura, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Temperatura, new { @class = "form-control", type = "number", step = "0.01", min = "0", id = "Temperatura" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Otros, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Otros, new { @class = "form-control", maxlength = 255 })
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Registrar" class="btn btn-unificado" />
                @Html.ActionLink("Volver", "Index", mascotaId != null ? new { mascotaId = mascotaId } : null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
$(document).ready(function() {
    if ($('#MascotaId').length && $('#MascotaId option').length > 1) {
        $('#MascotaId').select2({
            placeholder: "Buscar mascota...",
            allowClear: true
        });
    }
    document.querySelector('form').onsubmit = function (e) {
        var mascotaId = $('#MascotaId').length ? $('#MascotaId').val() : '@mascotaId';
        var fecha = document.getElementById('Fecha').value;
        var peso = document.getElementById('Peso').value;
        var temperatura = document.getElementById('Temperatura').value;
        var errorMsg = document.getElementById('errorMsg');
        errorMsg.style.display = 'none';
        errorMsg.innerText = '';
        if (!mascotaId) {
            errorMsg.innerText = "Debe seleccionar una mascota.";
            errorMsg.style.display = 'block';
            e.preventDefault();
            return false;
        }
        if (!fecha) {
            errorMsg.innerText = "Debe ingresar la fecha.";
            errorMsg.style.display = 'block';
            e.preventDefault();
            return false;
        }
        if (!peso) {
            errorMsg.innerText = "Debe ingresar el peso.";
            errorMsg.style.display = 'block';
            e.preventDefault();
            return false;
        }
        if (!temperatura) {
            errorMsg.innerText = "Debe ingresar la temperatura.";
            errorMsg.style.display = 'block';
            e.preventDefault();
            return false;
        }
    };
});
    </script>
}