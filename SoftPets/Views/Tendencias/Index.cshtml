@model IEnumerable<SoftPets.Models.Tendencia>
@{
    ViewBag.Title = "Tendencias de Salud";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int mascotaId = ViewBag.MascotaId;
    string nombreMascota = ViewBag.NombreMascota;
}

<div class="main-content-bg">
    <div class="tabla-container">
        <h2 class="text-center mb-4">Tendencias de Salud de @nombreMascota</h2>
        <p class="text-center">
            @Html.ActionLink("Registrar Tendencia", "Create", new { mascotaId = mascotaId }, new { @class = "btn btn-unificado btn-crear-nuevo mb-3" })
            <a href="@Url.Action("Grafico", new { mascotaId = mascotaId })" class="btn btn-unificado btn-crear-nuevo mb-3 ms-2">
                <i class="bi bi-bar-chart-line"></i> Ver Gráfico
            </a>
        </p>
        <table class="table table-custom">
            <tr>
                <th>Fecha</th>
                <th>Peso (kg)</th>
                <th>Temperatura (°C)</th>
                <th>Otros</th>
                <th>Fecha Registro</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Fecha.HasValue ? item.Fecha.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@item.Peso</td>
                    <td>@item.Temperatura</td>
                    <td>@item.Otros</td>
                    <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </table>
    </div>
</div>