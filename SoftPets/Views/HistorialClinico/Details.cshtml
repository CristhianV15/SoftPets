@model SoftPets.Models.HistorialClinico
@{
    ViewBag.Title = "Detalles de Historial Clínico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-width:600px;">
    <h2 class="mb-4">Detalles de Historial Clínico</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-5">Mascota</dt>
                <dd class="col-sm-7">@Model.MascotaId</dd>
                <dt class="col-sm-5">Dueño</dt>
                <dd class="col-sm-7">@Model.DuenioId</dd>
                <dt class="col-sm-5">Tipo</dt>
                <dd class="col-sm-7">@Model.Tipo</dd>
                <dt class="col-sm-5">Fecha Inicio Tratamiento</dt>
                <dd class="col-sm-7">@Model.FechaInicioTratamiento.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-5">Fecha Posible Fin Tratamiento</dt>
                <dd class="col-sm-7">@Model.FechaPosibleFinTratamiento.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-5">Fecha Fin Tratamiento</dt>
                <dd class="col-sm-7">@Model.FechaFinTratamiento?.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-5">Motivo</dt>
                <dd class="col-sm-7">@Model.Motivo</dd>
            </dl>
            <div class="mt-3">
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>